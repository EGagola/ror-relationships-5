<h1>Add new book</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "book_title">Title</label>:

<%= text_field 'books', 'title' %></p>
<p><label for = "book_page_count">Page Count</label>:

<%= text_field 'books', 'page_count' %></p>

<p><label for = "book_author_id">Author</label><br/>

<%= text_field 'books', 'author_id' %></p>
<%= submit_tag "Create" %>

<% end -%>
